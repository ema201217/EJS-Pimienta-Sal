<!DOCTYPE html>
<html>
<!-- Head -->
<%-include("./partials/head") %>

  <body>

    <!-- Navbar -->
    <%-include("./partials/navbar") %>

      <!-- Header -->
      <%-include("./partials/header") %>


        <!-- Page content -->
        <div class="ps-content">
          <!-- About Section -->
          <div class="ps-row ps-padding-64" id="about">
            <div class="ps-col m6 ps-padding-large ps-hide-small">
              <img src="/images/<%= about.imagen %> " class="ps-round ps-image ps-opacity-min"
                alt="SAbores que enamoran" width="600" height="750" />
            </div>

            <div class="ps-col m6 ps-padding-large">
              <h1 class="ps-center">
                <%= about.titulo %>
              </h1>
              <br />
              <p class="ps-large">
                <%= about.informacion1 %>
                  <span class="ps-tag ps-light-grey">
                    <%= about.palabraResaltada %>
                  </span>
                  <%= about.ultimaPalabraInfo1 %>
              </p>
              <p class="ps-large ps-text-grey ps-hide-medium">
                <%= about.informacion2 %>
              </p>
            </div>
          </div>

          <hr />
          <!-- Menu Section -->
          <div class="ps-row ps-padding-64" id="menu">
            <div class="ps-col l6 ps-padding-large">
              <h1 class="ps-center">Nuestro Menu</h1>
              <br />
              <% menus.forEach(menu=>{ %>
                <h4><a href="/detalle/<%=menu.id%>#menu">
                    <%= menu.nombre %>
                  </a></h4>
                <p class="ps-text-grey">
                  <%= menu.descripcion %>
                    <%= menu.precio %>
                </p>
                <br />
                <% }) %>
            </div>

            <div class="ps-col l6 ps-padding-large ps-img-menu">
              <img src="/images/menu.jpg" class="ps-round ps-image ps-opacity-min" alt="Menu" />
            </div>
          </div>
          <!-- Footer -->
          <%-include("./partials/footer") %>

        </div>
  </body>

</html>